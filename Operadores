#include <stdio.h>

int main(){
    // Declaração de variáveis
    int numero, antecessor, sucessor, contador, resultado, a, b, c;

    // Entrada de dados: o usuário digita um número
    printf("Digite o numero que deseja saber o sucessor e antecessor: ");
    scanf("%d", &numero);

    // Cálculo do antecessor e sucessor
    antecessor = numero - 1;
    sucessor = numero + 1;

    // Exibe o número digitado, seu antecessor e sucessor
    printf("Numero digitado: %d\n", numero);
    printf("Seu antecessor: %d\n", antecessor);
    printf("Seu sucessor: %d\n", sucessor);

    // Exibe a tabuada de multiplicação do número
    printf("Tabuada de Multiplicacao de %d\n", numero);
    contador = 1;
    resultado = numero * contador;

    // Calcula e exibe a tabuada até o número 10
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);
    contador++;
    resultado = numero * contador;
    printf("%d X %d: %d\n", numero, contador, resultado);

    // Calcula e exibe os três próximos números contados de 2 em 2
    printf("3 proximos numeros contado de 2 em 2\n");
    a = numero + 2;
    b = a + 2;
    c = b + 2;
    printf("%d - %d - %d\n", a, b, c);

    return 0;
}
